# PostgreSQL Reviewer Environment Configuration

# ==========================================
# Application Settings
# ==========================================
APP_NAME="PostgreSQL Reviewer"
APP_VERSION="0.1.0"
DEBUG=false
ENVIRONMENT=development

# ==========================================
# Main Database Connection (for storing app data)
# ==========================================
POSTGRES_DB=analyzer_db
POSTGRES_USER=analyzer
POSTGRES_PASSWORD=analyzer_password
DATABASE_URL=postgresql://analyzer:analyzer_password@localhost:5432/analyzer_db

# ==========================================
# HashiCorp Vault Configuration
# ==========================================
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=your_vault_token_here

# ==========================================
# Redis Configuration (for task queue)
# ==========================================
REDIS_URL=redis://localhost:6379

# ==========================================
# GigaChat Configuration
# ==========================================
GIGACHAT_API_KEY=your-gigachat-api-key-here
GIGACHAT_MODEL_NAME=GigaChat

# ==========================================
# LangSmith Configuration (Optional)
# ==========================================
LANGSMITH_TRACING=false
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=your-langsmith-api-key-here
LANGSMITH_PROJECT=postgresql-reviewer

# ==========================================
# Langfuse Configuration (Optional)
# ==========================================
LANGFUSE_TRACING=false
LANGFUSE_SECRET_KEY=your-langfuse-secret-key-here
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key-here
LANGFUSE_HOST=http://localhost:3000

# ==========================================
# Logging Configuration
# ==========================================
LOG_LEVEL=INFO
LOG_FILE=./logs/postgresql-reviewer.log

# ==========================================
# Vector Store Configuration
# ==========================================
VECTOR_STORE=faiss
FAISS_PERSIST_DIR=./data/faiss
KB_RULES_DIR=./src/kb/rules
EMBEDDINGS_MODEL=all-MiniLM-L6-v2
TOKENIZERS_PARALLELISM=false

# ==========================================
# Knowledge Base Settings
# ==========================================
CHUNK_SIZE=1500
CHUNK_OVERLAP=200
MAX_RULES_TO_RETRIEVE=6

# ==========================================
# Rate Limiting
# ==========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ==========================================
# Directory Paths
# ==========================================
STATIC_DIR=./src/api/static
LOGS_DIR=./logs

# ==========================================
# Scheduler Configuration
# ==========================================
SCHEDULER_WORKERS_COUNT=1
SCHEDULER_CHECK_INTERVAL=30
SCHEDULER_API_URL=http://postgresql-reviewer:8000

# ==========================================
# Docker Compose Override (for development)
# ==========================================
# Uncomment and modify as needed
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# REDIS_HOST=localhost
# REDIS_PORT=6379
# VAULT_HOST=localhost
# VAULT_PORT=8200
FAISS_PERSIST_DIR=./data/faiss
KB_RULES_DIR=./src/kb/rules
EMBEDDINGS_MODEL=all-MiniLM-L6-v2
TOKENIZERS_PARALLELISM=false
CHUNK_SIZE=1500
CHUNK_OVERLAP=200
MAX_RULES_TO_RETRIEVE=6

# ==========================================
# Application Settings
# ==========================================
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=./logs/postgresql-reviewer.log

# ==========================================
# Rate Limiting
# ==========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ==========================================
# File Paths
# ==========================================
STATIC_DIR=./static
LOGS_DIR=./logs
